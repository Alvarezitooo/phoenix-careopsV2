# Configuration PhoenixCare - Variables d'environnement

# === IA ET LLM ===
# Clé API Gemini (partagée avec Phoenix Luna)
GEMINI_API_KEY=your_gemini_api_key_here

# === BASE DE DONNÉES ===
# Supabase (base de données principale)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# PostgreSQL (si utilisé directement)
DATABASE_URL=postgresql://user:password@localhost:5432/phoenixcare

# === VECTORISATION ===
# Pinecone (base vectorielle)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=phoenixcare-legal

# === CACHE ET SESSIONS ===
# Redis
REDIS_URL=redis://localhost:6379

# === SÉCURITÉ ===
# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256

# === SERVEUR ===
# Configuration serveur
NODE_ENV=development
PORT=8080
SERVER_PORT=8080

# API Python (FastAPI)
PYTHON_API_URL=http://localhost:8000

# === LOGGING ===
# Niveau de log (debug, info, warn, error)
LOG_LEVEL=info

# === MONITORING ===
# Sentry (optionnel)
SENTRY_DSN=your_sentry_dsn_here

# === RATE LIMITING ===
# Limite de requêtes
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === SCRAPING ===
# Configuration scraping éthique
SCRAPING_RATE_LIMIT=3
SCRAPING_USER_AGENT=PhoenixCare-Bot/1.0 (+https://phoenixcare.fr/robot)

# === EMAIL ===
# Configuration email (pour notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# === DÉVELOPPEMENT ===
# Variables de développement
DEBUG=true
VERBOSE_LOGGING=true

# === STRIPE (PAIEMENTS) ===
# Stripe API Keys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
FRONTEND_URL=http://localhost:3000

# === PRODUCTION ===
# Variables pour production (commenter en dev)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# ALLOWED_ORIGINS=https://phoenixcare.fr,https://www.phoenixcare.fr
# FRONTEND_URL=https://phoenixcare.vercel.app
# STRIPE_SECRET_KEY=sk_live_...